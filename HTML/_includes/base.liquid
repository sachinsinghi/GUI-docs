{% comment %}
	This snippet prints a base tag in the header depending on it's current weight

	Usage:
		{% include base.liquid  brand = "BOM" %}

	Return:
		HTML direct output

	Required:
		The page needs a correct weight value in it's front matter
{% endcomment %}


{% assign level = page.weight | split: "." %}
{% assign level = level.size %}
{% assign base = '' %}

{% for l in (1..level) %}
	{% capture base %}{{ base }}../{% endcapture %}
{% endfor %}

{% if page.layout == 'error' %}
	{% assign base = '/GUI/' %}
{% endif %}

<base href="{{ base }}{{ include.brand }}/">

